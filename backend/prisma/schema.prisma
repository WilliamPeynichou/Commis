generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String?  // null for Google-only accounts
  googleId  String?  @unique
  avatarUrl String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recipeHistory RecipeHistory[]
  weeklyMenus   WeeklyMenu[]
}

model RecipeHistory {
  id        String   @id @default(cuid())
  name      String
  category  String
  sessionId String?  // anonymous users
  userId    String?  // authenticated users
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([name, sessionId])
  @@unique([name, userId])
  @@index([sessionId, createdAt(sort: Desc)])
  @@index([userId, createdAt(sort: Desc)])
}

model Recipe {
  id              String   @id @default(cuid())
  name            String
  category        String
  preparationTime Int
  ingredients     Json
  steps           String[]
  pricePerPerson  Float
  nutrition       Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  weeklyMenu   WeeklyMenu? @relation(fields: [weeklyMenuId], references: [id])
  weeklyMenuId String?
}

model WeeklyMenu {
  id           String   @id @default(cuid())
  userId       String?
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  mealsCount   Int
  personsCount Int
  recipes      Recipe[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ExcludedTag {
  id     String  @id @default(cuid())
  name   String
  userId String?

  @@unique([name, userId])
}
