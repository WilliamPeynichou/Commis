PORT=3001
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FRONTEND_URL="http://localhost:5173"
NODE_ENV=development

# Database — add via Railway "Plugins > Add > PostgreSQL", copy DATABASE_URL
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Auth — generate with: node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
JWT_SECRET=change_me_to_a_random_64_char_hex_string_minimum_32_chars_required

# Google OAuth — create at https://console.cloud.google.com/apis/credentials
# Authorised redirect URI must match GOOGLE_CALLBACK_URL exactly
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Admin account — created automatically on first startup if both are set
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe1234!
ADMIN_USERNAME=admin
